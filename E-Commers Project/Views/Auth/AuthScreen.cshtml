@model LoginModel

@{
    ViewData["Title"] = "AuthScreen";
    Layout = "_AuthLayout";
}


<link rel="stylesheet" href="~/css/loginStyle.css">


<div class="container" style="max-width:100%; border-radius:unset;">
    <div class="form-box login ">
        <form method="post" asp-action="Login" asp-controller="Auth">
            <h1>Login</h1>

            <div class="input-box">
                <input type="text" asp-for="Email" value="@Model?.Email" placeholder="Email" autocomplete="email" required>
                <ion-icon name="person-outline"></ion-icon>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input type="password" asp-for="Password" placeholder="Password" autocomplete="current-password" required>
                <ion-icon name="lock-closed-outline"></ion-icon>
                <span asp-validation-for="Password" class="text-danger"></span> <!-- ✅ تم تصحيح الخطأ هنا -->
                <span asp-validation-for="genral" class="text-danger"></span>
            </div>
            <div class="forget-link">
                <a href="#">Forget Password?</a>
            </div>

            <button type="submit" class="btn">Login</button>

            <p>or login with social platforms</p>

            <div class="social-icon">
                <a href="#"><ion-icon name="logo-google"></ion-icon> </a>
                <a href="#"><ion-icon name="logo-facebook"></ion-icon> </a>
                <a href="#"><ion-icon name="logo-github"></ion-icon> </a>
                <a href="#"><ion-icon name="logo-linkedin"></ion-icon> </a>
            </div>
        </form>


    </div>

    <div class="form-box register" >

        <form method="post" asp-action="SignUp" asp-controller="Auth">
            <h1>Registration</h1>

            <div class="input-box">
                <input type="text" asp-for="UserName" value="@Model?.UserName" placeholder="Username" required>
                <ion-icon name="person-outline"></ion-icon>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input type="email" asp-for="Email" value="@Model?.Email" placeholder="email" required>
                <ion-icon name="mail-outline"></ion-icon>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input type="password" asp-for="Password" placeholder="Password" required>
                <ion-icon name="lock-closed-outline"></ion-icon>
                <span asp-validation-for="Password" class="text-danger"></span>
                <span asp-Validation-for="genral"></span>
            </div>

            <button type="submit" class="btn">Register</button>

            <p>or Register with social platforms</p>

            <div class="social-icon">
                <a href="#"><ion-icon name="logo-google"></ion-icon></a>
                <a href="#"><ion-icon name="logo-facebook"></ion-icon></a>
                <a href="#"><ion-icon name="logo-github"></ion-icon></a>
                <a href="#"><ion-icon name="logo-linkedin"></ion-icon></a>
            </div>
        </form>

    </div>
    <div class="toggle-box">
        <div class="toggle-panel toggle-left">
            <h1>Hello,welcome!</h1>
            <p>Don't have an account?</p>
            <button class="btn register-btn">Register</button>
        </div>
        <div class="toggle-panel toggle-right">
            <h1>welcome Back!</h1>
            <p>Already have an account?</p>
            <button class="btn login-btn">login</button>
        </div>
    </div>
</div>








<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script src="~/js/Login.js"></script>

